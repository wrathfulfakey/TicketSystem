@using Microsoft.AspNetCore.Identity
@using TicketSystem.Data.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello <b>@UserManager.GetUserName(User)</b>!</a>
            </li>
            @if (this.User.IsInRole("Administrator"))
            {
                <li class="nav-item">
                    <a id="manage" class="nav-link text-dark" asp-area="Administration" asp-controller="Dashboard" asp-action="Dashboard">Admin Dashboard</a>
                </li>
            }
            <li class="nav-item">
                <a id="manage" class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Dashboard" asp-route-username="@this.User.Identity.Name">Dashboard</a>
            </li>
            <li class="nav-item">
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
        }
    </ul>
